@model IEnumerable<NStore.Models.EF.DonHang>

<div class="row">
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-add mt-0 mb-3">
                    <div class="row">
                        <div class="col-sm-8">
                            <h2 class="table-title">Danh sách <b>đơn hàng</b></h2>
                        </div>
                        <div class="col-sm-4">
                            @using (Html.BeginForm("Index", "Order", FormMethod.Get))
                            {
                                <div class="search-box">
                                    <i class="material-icons">&#xE8B6;</i>
                                    <input type="text" name="q" class="form-control" placeholder="Tìm kiếm&hellip;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Khách hàng
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KhachHang.soDienThoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ngayDatHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ngayGiaoHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.diaChiGiaoHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.thanhTien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.trangThaiThanhToan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.trangThaiDonHang)
                            </th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    #@Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @Html.ActionLink(item.KhachHang.hoTen, "Details", "Customer", new { item.KhachHang.id }, null)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KhachHang.soDienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngayDatHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngayGiaoHang)
                                </td>
                                <td width="20%">
                                    @Html.DisplayFor(modelItem => item.diaChiGiaoHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.thanhTien)
                                </td>
                                <td class="text-center" style="vertical-align: middle; font-size: 20px">
                                    @if (item.trangThaiThanhToan.Value)
                                    {
                                        <i class="fas fa-check" style="color: #00cc00 "></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times" style="color: #E34724"></i>
                                    }
                                </td>
                                <td width="10%">
                                    @{ string orderState = ""; }
                                    @switch (item.trangThaiDonHang)
                                    {
                                        case 1:
                                            orderState = "Chờ xác nhận";
                                            break;
                                        case 2:
                                            orderState = "Chờ lấy hàng";
                                            break;
                                        case 3:
                                            orderState = "Đang giao";
                                            break;
                                        case 4:
                                            orderState = "Đã giao";
                                            break;
                                        case 5:
                                            orderState = "Đơn huỷ";
                                            break;
                                        case 6:
                                            orderState = "Trả hàng";
                                            break;
                                    }
                                    @orderState
                                </td>
                                <td>
                                    <div>
                                        <a href="@Url.Action("Details", new { id = item.id })" class="view" title="Xem" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                                        <a href="@Url.Action("Edit", new { id = item.id })" class="edit" title="Sửa" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                        <a href="@Url.Action("Delete", new { id = item.id })" class="delete" title="Xóa" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

