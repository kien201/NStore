
@{
    ViewBag.Title = "Quản Lý Đơn Hàng";
}

@section styles{
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="~/assets/css/admin-table-style.css" />
    <style>
        .nav-tabs .nav-item .nav-link {
            color: #566787;
        }

            .nav-tabs .nav-item .nav-link.active {
                font-weight: bold;
            }

        .table-responsive {
            border: 1px solid #dee2e6;
            border-top-width: 0;
        }
    </style>
}

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#tab-all" role="tab" aria-controls="tab-all" aria-selected="true">Tất cả</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="false">Chờ xác nhận</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false">Chờ lấy hàng</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab-3" role="tab" aria-controls="tab-3" aria-selected="false">Đang giao</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab-4" role="tab" aria-controls="tab-4" aria-selected="false">Đã giao</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab-5" role="tab" aria-controls="tab-5" aria-selected="false">Đơn huỷ</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab-6" role="tab" aria-controls="tab-6" aria-selected="false">Trả hàng/Hoàn tiền</a>
    </li>
</ul>
<div class="row">
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-add mt-0 mb-3">
                    <div class="row">
                        <div class="col-sm-8">
                            <h2 class="table-title">Danh sách <b>đơn hàng</b></h2>
                        </div>
                        <div class="col-sm-4">
                            @using (Html.BeginForm("Index", "Order", FormMethod.Get))
                            {
                                <div class="search-box">
                                    <i class="material-icons">&#xE8B6;</i>
                                    <input type="text" name="q" class="form-control" placeholder="Tìm kiếm&hellip;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-all" role="tabpanel" aria-labelledby="tab-all-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q })
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="tab-1" role="tabpanel" aria-labelledby="tab-1-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q, orderState = 1 })
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="tab-2-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q, orderState = 2 })
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="tab-3" role="tabpanel" aria-labelledby="tab-3-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q, orderState = 3 })
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="tab-4" role="tabpanel" aria-labelledby="tab-4-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q, orderState = 4 })
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="tab-5" role="tabpanel" aria-labelledby="tab-5-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q, orderState = 5 })
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="tab-6" role="tabpanel" aria-labelledby="tab-6-tab">
                        @Html.Action("RenderTableOrder", new { q = ViewBag.q, orderState = 6 })
                    </div><!-- .End .tab-pane -->
                </div><!-- End .tab-content -->
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var menu = $("#sidenavMenu")[0].querySelectorAll(".nav-link");
        menu.forEach((item) => {
            item.classList.remove("active");
        })
        menu[1].classList.add("active");
    </script>
}