@model IEnumerable<NStore.Models.EF.PhieuNhap>

<div class="table-add">
    <a href="@Url.Action("NhapKho")" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Nhập kho</span></a>
    <a href="@Url.Action("Index", "NhaCungCap")" class="btn btn-secondary"><i class="material-icons">&#xe817;</i> <span>Nhà cung cấp</span></a>
</div>

<table class="table table-striped table-hover table-bordered mb-0">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Nhân viên thực hiện
            </th>
            <th>
                Nhà cung cấp
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ngayNhap)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    #@Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.ActionLink(item.NhanVien.hoTen, "Details", "Staff", new { item.NhanVien.id }, null)
                </td>
                <td>
                    @Html.ActionLink(item.NhaCungCap.tenNhaCungCap, "Details", "NhaCungCap", new { item.NhaCungCap.id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngayNhap)
                </td>
                <td>
                    <div>
                        <a href="@Url.Action("ChiTietPhieuNhap", new { id = item.id })" class="view" title="Xem" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                        <a href="@Url.Action("XoaPhieuNhap", new { id = item.id })" class="delete" title="Xóa" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
