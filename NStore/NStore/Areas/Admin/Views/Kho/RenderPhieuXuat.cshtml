@model IEnumerable<NStore.Models.EF.PhieuXuat>

<div class="table-add">
    <a href="@Url.Action("XuatKho")" class="btn btn-danger"><i class="material-icons">&#xf08f;</i> <span>Xuất kho</span></a>
</div>

<table class="table table-striped table-hover table-bordered mb-0">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Nhân viên thực hiện
            </th>
            <th>
                Đơn hàng
            </th>
            <th>
                Khách đặt
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ngayXuat)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    #@Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.ActionLink(item.NhanVien.hoTen, "Details", "Staff", new { item.NhanVien.id }, null)
                </td>
                @if (item.idDonHang != null)
                {
                    <td>
                        @Html.ActionLink("#" + item.idDonHang, "Details", "Order", new { item.DonHang.id }, null)
                    </td>
                    <td>
                        @Html.ActionLink(item.DonHang.KhachHang.hoTen, "Details", "Customer", new { item.DonHang.KhachHang.id }, null)
                    </td>
                }
                else
                {
                    <td>??</td>
                    <td>??</td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.ngayXuat)
                </td>
                <td>
                    <div>
                        <a href="@Url.Action("ChiTietPhieuXuat", new { id = item.id })" class="view" title="Xem" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                        <a href="@Url.Action("XoaPhieuXuat", new { id = item.id })" class="delete" title="Xóa" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>