@model IEnumerable<NStore.Models.EF.PhieuXuat>

<div class="row">
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <h2 class="table-title">Danh sách <b>phiếu xuất</b></h2>
                <div class="table-add">
                    <div class="row">
                        <div class="col-sm-8">
                            <a href="@Url.Action("XuatKho")" class="btn btn-secondary"><i class="material-icons">&#xf08f;</i> <span>Xuất kho</span></a>
                        </div>
                        <div class="col-sm-4">
                            @using (Html.BeginForm("Index", "Kho", FormMethod.Get))
                            {
                                <div class="search-box">
                                    <i class="material-icons">&#xE8B6;</i>
                                    <input type="text" name="q" class="form-control" placeholder="Tìm kiếm&hellip;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Nhân viên thực hiện
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ngayXuat)
                            </th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    #@Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @Html.ActionLink(item.NhanVien.hoTen, "Details", "Staff", new { item.NhanVien.id }, null)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngayXuat)
                                </td>
                                <td>
                                    <div>
                                        <a href="@Url.Action("ChiTietPhieuXuat", new { id = item.id })" class="view" title="Xem" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                                        <a href="@Url.Action("XoaPhieuXuat", new { id = item.id })" class="delete" title="Xóa" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>