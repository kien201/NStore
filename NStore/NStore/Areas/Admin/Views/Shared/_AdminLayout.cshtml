@{
    Html.Action("CheckAuthenticate", "Login");
    var curStaff = Session["curStaff"] as NStore.Models.EF.NhanVien;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/logo-icon.ico" />
    <link href="~/assets/css/bootstrap-5-1-3.css" rel="stylesheet" />
    <script src="~/assets/js/fontawesome-5-15-3-all.min.js"></script>
    <style>
        .sb-sidenav-dark .sb-sidenav-menu .nav-link.active {
            color: #ddd;
        }

        table td {
            vertical-align: middle;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("styles", false)
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Customer")">
            <img src="~/assets/images/logo-white.png" alt="Logo AnimeVn" width="70%" />
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></div>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Thông tin tài khoản</a></li>
                    <li><a class="dropdown-item" href="#!">Đổi mật khẩu</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>@Html.ActionLink("Đăng xuất", "Logout", "Login", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu" id="sidenavMenu">
                    <div class="nav">
                        @{
                            string controllerName = @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
                        }
                        <div class="sb-sidenav-menu-heading">Người dùng</div>
                        <a class="nav-link @(controllerName == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")" js-menu-name="Order">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Bản Tin
                        </a>
                        <a class="nav-link @(controllerName == "Customer" ? "active" : "")" href="@Url.Action("Index", "Customer")" js-menu-name="Customer">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Khách Hàng
                        </a>
                        @if (curStaff.chucVu == 1)
                        {
                            <a class="nav-link @(controllerName == "Staff" ? "active" : "")" href="@Url.Action("Index", "Staff")" js-menu-name="Staff">
                                <div class="sb-nav-link-icon"><i class="fas fa-user-cog"></i></div>
                                Nhân Viên
                            </a>
                        }
                        <div class="sb-sidenav-menu-heading">Bán hàng</div>
                        <a class="nav-link @(controllerName == "Order" ? "active" : "")" href="@Url.Action("Index", "Order")" js-menu-name="Order">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Đơn Hàng
                        </a>
                        <a class="nav-link @(controllerName == "Kho" ? "active" : "")" href="@Url.Action("Index", "Kho")" js-menu-name="Kho">
                            <div class="sb-nav-link-icon"><i class="fas fa-warehouse"></i></div>
                            Kho Hàng
                        </a>
                        <div class="sb-sidenav-menu-heading">Quản lý sản phẩm</div>
                        <a class="nav-link @(controllerName == "SanPham" ? "active" : "")" href="@Url.Action("Index", "SanPham")" js-menu-name="SanPham">
                            <div class="sb-nav-link-icon"><i class="fas fa-couch"></i></div>
                            Sản Phẩm
                        </a>
                        <a class="nav-link @(controllerName == "CategoryGroup" ? "active" : "")" href="@Url.Action("Index", "CategoryGroup")" js-menu-name="CategoryGroup">
                            <div class="sb-nav-link-icon"><i class="fas fa-list-alt"></i></div>
                            Nhóm Danh Mục
                        </a>
                        <a class="nav-link @(controllerName == "Category" ? "active" : "")" href="@Url.Action("Index", "Category")" js-menu-name="Category">
                            <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
                            Danh Mục
                        </a>
                        <div class="sb-sidenav-menu-heading">Báo cáo & thống kê</div>
                        <a class="nav-link @(controllerName == "Report" ? "active" : "")" href="@Url.Action("Index", "Report")" js-menu-name="Category">
                            <div class="sb-nav-link-icon"><i class="fas fa-coins"></i></div>
                            Doanh Thu
                        </a>
                        <a class="nav-link @(controllerName == "ChartReport" ? "active" : "")" href="@Url.Action("Index", "ChartReport")" js-menu-name="Category">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Biểu Đồ
                        </a>
                    </div>

                </div>
                <div class="sb-sidenav-footer">
                    <span class="small">
                        Người dùng:
                        @curStaff.hoTen
                    </span>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4 py-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>*@
    <script src="~/assets/js/bootstrap-5-1-3.bundle.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/scripts.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
