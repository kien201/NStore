@model IEnumerable<NStore.Models.EF.SanPham>

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
}
@section styles{
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="~/assets/css/admin-table-style.css" />
}
<div class="row">
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <h2 class="table-title">Danh sách <b>Sản Phẩm</b></h2>
                <div class="table-add">
                    <div class="row">
                        <div class="col-sm-8">
                            <a href="@Url.Action("Create")" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Thêm Mới</span></a>
                        </div>
                        <div class="col-sm-4">
                            @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
                            {
                                <div class="search-box">
                                    <i class="material-icons">&#xE8B6;</i>
                                    <input type="text" name="q" class="form-control" placeholder="Tìm kiếm&hellip;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.tenSanPham)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DanhMuc.tenDanhMuc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.img)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.mota)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.xuatXu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.donGia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.giamGia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.soLuongTon)
                            </th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tenSanPham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DanhMuc.tenDanhMuc)
                                </td>
                                <td width="15%">
                                    <img src="~/assets/images/products/@item.img" alt="??" width="100%" />
                                </td>
                                <td width="20%">
                                    @if (item.mota != null && item.mota.Length > 130)
                                    {
                                        @item.mota.Substring(0, 130)
                                        <span>...</span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.mota)
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.xuatXu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.donGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.giamGia)%
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.soLuongTon)
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = item.id })" class="view" title="Xem" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                                    <a href="@Url.Action("Edit", new { id = item.id })" class="edit" title="Sửa" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                    <a href="@Url.Action("Delete", new { id = item.id })" class="delete" title="Xóa" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>